{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"declaration": true,
		"outDir": "dist/",
		"rootDir": "src/",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts",
		"typings/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
